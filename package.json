  "engines": {
    "node": ">= 4.0"
  },
  "devDependencies": {
    "@types/chai": "^4.0.1",
    "@types/proxyquire": "^1.3.27",
    "@types/sinon": "^2.1.2",
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "eslint-config-pedant": "^0.10.0",
    "mocha": "^3.4.2",
    "mock-fs": "^4.4.1",
    "nyc": "^11.0.3",
    "proxyquire": "^1.8.0",
    "sinon": "^2.3.6",
    "ts-node": "^7.0.1",
    "tslint": "^5.0.0",
    "tslint-config-typings": "^0.3.1",
    "typescript": "^3.0.1"
  },
  "scripts": {
    "lint": "npm run lint:js && npm run lint:dts",
    "lint:js": "eslint .",
    "lint:dts": "tslint packages/*/types/*.d.ts",
    "pretest": "npm run lint",
    "test": "nyc mocha -r ts-node/register 'packages/*/{test,spec}/**/*.{test,spec}.js'",
    "test:specs": "mocha -r ts-node/register tests",
    "test:cover": "nyc mocha -r ts-node/register tests"
  },
  "nyc": {
    "exclude": [
      "**/*.test.js",
      "**/*.spec.js"
    ]
  }
